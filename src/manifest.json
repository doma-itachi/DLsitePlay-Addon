{
    "manifest_version": 3,
    "name": "DLsitePlay Addon",
    "version": "2.1.1",
    "description": "DLsitePlayに機能を追加します",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://play.dlsite.com/*"],
            "all_frames": true,
            "js": ["main.js"],
            "css": ["main.css"]
        }
    ],
    "permissions": [
        "storage",
        "unlimitedStorage"
    ]
}